    <input type="text" class="form-control" name="gender" disabled  placeholder="gender" value= <%= editusers[0].gender %> >
    
  </div>
<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Click to update</button>
  
</form> 
</div>
